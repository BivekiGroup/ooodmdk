---
import Layout from "../layouts/Layout.astro";
import Products from "../components/Products.astro";
import InlineLeadSection from "../components/InlineLeadSection.astro";
import TrustSection from "../components/TrustSection.astro";
import { defaultLocale, getLocaleFromUrl, getTranslations, normalizeLocale } from "../i18n";

export interface Props {
  lang?;
}

const propLang = Astro.props.lang;
const baseLocale = Astro.locals.baseLocale ?? defaultLocale;
const detectedLang = getLocaleFromUrl(Astro.url.pathname, baseLocale);
const lang = normalizeLocale(propLang ?? detectedLang ?? baseLocale);
const locale = getTranslations(lang);
const heroLocale = locale.catalogPage.hero;
---

<Layout lang={lang}>
  <section class="relative py-20 xs:py-24 sm:py-28 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-16 left-20 w-40 h-40 bg-yellow-500 rounded-full blur-3xl"></div>
      <div class="absolute bottom-16 right-24 w-48 h-48 bg-yellow-400 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-5xl mx-auto px-4 xs:px-6 sm:px-10 relative z-10 text-center">
      <span class="text-xs uppercase tracking-[0.4em] text-yellow-400 font-semibold font-gilroy">{heroLocale.badge}</span>
      <h1 class="mt-4 text-3xl xs:text-4xl sm:text-5xl lg:text-6xl font-bold text-white font-nevduplenysh leading-tight">
        {heroLocale.title}
      </h1>
      <p class="mt-6 text-base xs:text-lg text-gray-300 font-gilroy leading-relaxed">
        {heroLocale.description}
      </p>
      <div class="mt-8 flex flex-col xs:flex-row justify-center gap-3">
        <a href="#catalog" class="inline-flex items-center justify-center px-6 xs:px-8 py-3 xs:py-4 rounded-lg bg-yellow-500 text-black font-semibold text-base xs:text-lg font-gilroy hover:bg-yellow-400 transition">
          {heroLocale.primaryCta}
        </a>
        <button class="open-modal inline-flex items-center justify-center px-6 xs:px-8 py-3 xs:py-4 rounded-lg border border-yellow-500 text-yellow-400 font-semibold text-base xs:text-lg font-gilroy hover:bg-yellow-500 hover:text-black transition">
          {heroLocale.secondaryCta}
        </button>
      </div>
    </div>
  </section>

  <div id="catalog">
    <Products lang={lang} />
  </div>

  <InlineLeadSection lang={lang} />
  <TrustSection lang={lang} />
</Layout>
